<main>
  <div class="col-xs-7">
    <h3>新着記事</h3>
    <div class="container">
      <% @entries.each do |entry| %>
        <div class="panel panel-default">
          <div class="panel-body">
            <%= link_to entry.title, entry %> - <i> published <%= time_ago_in_words(entry.published) %> ago.</i>
            <div id="likes_buttons_<%= entry.id %>">
    	       <%= render partial: 'favorites/favorite', locals: { blog_entry: entry, favorites: entry.favorites} %>
    	      </div>
          </div>
        </div>
      <% end %>
    </div>
    <%= paginate @entries, class:"hogehoge" %>
  </div>
  <div class="col-xs-5">
    <h3>いいねランキング</h3>
     <% @rank.each.with_index(1) do |rank, i| %>
      <td><div class="panel panel-default">
            <div class="panel-body">
              <%= "第#{i}位" %>
                <%= link_to rank.title %> - <i> published <%= time_ago_in_words(rank.published) %> ago.</i>
                  <div id="likes_buttons_<%= rank.id %>">
                    <%= render partial: 'favorites/favorite', locals: { blog_entry: rank, favorites: rank.favorites} %>
                  </div>
            </div>
          </div>
      </td>
     <% end %>
  </div>
</main>
