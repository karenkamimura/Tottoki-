<h1 class="title-moji">All User</h1>
    <table class="table table-hover table-inverse">
        <thead>
          　　<tr>
            	<th>image</th>
            	<th>name</th>
            	<th></th>
          　　</tr>
        </thead>
        <tbody>
        <% @users.each do |user| %>
         　　 <tr>
      	      　<td><%= attachment_image_tag user, :profile_image, :fill, 60, 60, class: "img-circle pull-left profile-img", format: 'jpeg', fallback: "no_image.png"  %></td>

      	      　<td><%= user.username %></td>

      	      　<td><%= link_to 'マイページ' , user_path(user.id), class: "btn btn-default btn-sm" %></td>

      	      <% if current_user && current_user.admin? %>
      	        	<td><%= link_to "編集", edit_user_path(user.id), class: "btn btn-default btn-sm" %></td>
      	      <% end %>

      	      <% if current_user && current_user.admin? %>
      		    	  <td><%= link_to "退会", user_path(@users, :user => {:deleted => 'true'}), class: "btn btn-default btn-sm" , method: :delete, "data-confirm" => "本当に消しますか？" %></td>

              <% end %>
            </tr>
        <% end %>
        </tbody>
    </table>