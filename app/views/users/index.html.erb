<h2>ユーザー一覧</h2>
    <table>
        <thead>
          　　<tr>
            	<th>image</th>
            	<th>name</th>
            	<th></th>
          　　</tr>
        </thead>
        <tbody>
        <% @users.each do |user| %>
         　　　<tr>
		      　<td><%= attachment_image_tag user, :profile_image, :fill, 60, 60, class: "user_image", fallback: "no_image.jpg" %></td>
		      　<td><%= user.username %></td>
		      　<td><%= link_to 'show' , user_path(user.id), class: "btn-sm btn-primary" %></td>

		      <% if current_user && current_user.admin? %>
		        	<td><%= link_to "編集", edit_user_path(user.id), class:　"btn-sm btn-success" %></td>
		      <% end %>

		      <% if current_user && current_user.admin? %>
			    	<td><%= link_to "退会", users_path(@user.id), method: :delete, class:　"btn-sm btn-danger", "data-confirm" => "本当に消しますか？" %></td>

               <% end %>
            </tr>
        <% end %>
        </tbody>
    </table>