<h2>ユーザー情報編集</h2>
	<% if @user.errors.any? %>
        <div class="alert alert-warning">
          　<ul>
            	<% @user.errors.full_messages.each do |message| %>
            	<li><%= message %></li>
            	<% end %>
          </ul>
        </div>
    <% end %>



    <%= form_for(@user) do |f| %>

	    <div class="field">
	    	<%= f.attachment_field :profile_image, class: "user_image" %>
	    </div>

	    <div class="field">
			<%= f.label :ニックネーム %><br />
			<%= f.text_field :username, autofocus: true, autocomplete: "username", class:"username" %>
	    </div>

	    <div class="field">
			<%= f.label :電話番号 %><br />
			<%= f.text_field :phone_number, autofocus: true, autocomplete: "phone_number", class:"phone_number" %>
	    </div>

		<div class="field">
			<%= f.label :メールアドレス %><br />
			<%= f.email_field :email, autofocus: true, autocomplete: "email" %>
		</div>


		<div class="actions">
			<%= f.submit "編集", class:"btn-sm btn-success" %>
		</div>

	<% end %>