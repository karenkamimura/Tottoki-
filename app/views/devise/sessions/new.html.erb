<div class="main-log">
  <p class="sign" align="center">
    Log in</p>

    <div class="form1">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

        <%= f.text_field :username, autofocus: true, autocomplete: "username", class:"un",placeholder:"Username" %>

        <%= f.password_field :password, autocomplete: "password", class:"pass",placeholder:"Password" %>
        <br>

        <% if devise_mapping.rememberable? %>
            <div class="main-item-log"><%= f.check_box :remember_me %>
            <%= f.label :remember_me %></div>
         <% end %>
         <br>

        <%= f.submit "Log in", class: "submit" %>

      <% end %>
    </div>
</div>
